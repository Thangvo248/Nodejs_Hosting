<!-- start form register-->
<div class="background_Register">
    <div class="form_login">
        <h2>Đăng ký tài khoản</h2>
        <form action="/users/submitregister" method="POST" name="registration" id="registration">
            <div class="form-group mb-3">
                <label for="name"></label>
                <input name="name" type="text" class="form-control validate" placeholder="Nhập họ và tên" />
            </div>
            <div class="form-group mb-3">
                <label for="email"></label>
                <input name="email" type="email" class="form-control validate" placeholder="Nhập địa chỉ email"
                     />
            </div>
            <div class="form-group mb-3">
                <label for="text"></label>
                <input name="phone" type="number" class="form-control validate" placeholder="Nhập số điện thoại"
                     />
            </div>
            <div class="form-group mb-3">
                <label for="password"></label>
                <input name="password" type="password" class="form-control validate" placeholder="Nhập mật khẩu"
                     />
            </div>

            <div class="form-group mb-3">
                <label for="repeatPassword"></label>
                <input name="repeatPassword" type="password" class="form-control validate"
                    placeholder="Xac nhan lại mật khẩu"  />
                </br>
                <a href="">
                    <button type="submit" class="btn btn-primary btn-block text-uppercase" name="submit" id="submit" value="Submit">Thêm tai khoan</button>
                </a>
        </form>
    </div>
</div>
