<!-- start form register-->
<div class="background_Register">
    <div class="form_login">
        <h2>Đăng ký tài khoản</h2>
        <form action="/users/submitregister" method="POST">
            <div class="form-group mb-3">
                <label for="name"></label>
                <input name="name" type="text" class="form-control validate" placeholder="Nhập ho va ten ten"
                    required />
            </div>
            <div class="form-group mb-3">
                <label for="email"></label>
                <input name="email" type="email" class="form-control validate" placeholder="Nhập địa chỉ email"
                    required />
            </div>
            <div class="form-group mb-3">
                <label for="text"></label>
                <input name="phone" type="number" class="form-control validate" placeholder="Nhập số điện thoại"
                    required />
            </div>
            <div class="form-group mb-3">
                <label for="password"></label>
                <input name="password" type="password" class="form-control validate" placeholder="Nhập mật khẩu"
                    required />
            </div>
            <!--
            <div class="form-group mb-3">
                <label for="password"></label>
                <input name="password" type="password" class="form-control validate" placeholder="Xac nhan lại mật khẩu"
                    required />
                    -->
            <a href="">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm sản phẩm</button>
            </a>
            <a class="psw-text" href="/users/login"> Đăng nhập</a>
        </form>
    </div>
</div>