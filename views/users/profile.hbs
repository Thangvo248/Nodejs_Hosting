<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="{{user.avatar}}" weight="400px" alt="Card image cap"
                        id="product-detail">
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h4">Thông tin cá nhân </h1>
                        <ul class="list-unstyled pb-3">
                            <li> Họ và Tên: {{user.name}}</li>
                            <li>Số điện thoại: {{user.phone}}</li>
                            <li>Email: {{user.email}}</li>
                            <li> Giới tính: {{user.gender}}</li>
                            <li>Ngày sinh: {{user.dateofbirth}}</li>
                            <li>Địa chỉ nhận hàng : {{user.address}}</li>
                        </ul>

                        <form action="" method="GET">
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg" name="submit" value="buy">Chỉnh
                                        sửa</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>